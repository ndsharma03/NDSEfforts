<Window x:Class="GuruWPF.ShowLogs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuruWPF"
        mc:Ignorable="d"
        Title="ShowLogs" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Logs added by different forms"/>
             
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="230" Margin="24,50,0,0" VerticalAlignment="Top" Width="432"/>
        <Button x:Name="button" Content="clear log" Width="75"  Margin="224,50,0,0" Height="30" Click="Button_Click"/>

    </Grid>
</Window>
