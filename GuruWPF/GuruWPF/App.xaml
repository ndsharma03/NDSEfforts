<Application x:Class="GuruWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GuruWPF"
             StartupUri="General.xaml" >
    <!-- "HowTo/HowTo_DragDrop.xaml" -->
    <Application.Resources>
        <ControlTemplate x:Key="windowTemplate" TargetType="{x:Type Window}">
            <StackPanel>
                <Ellipse Fill="Beige" Stroke="Brown" Stretch="Fill" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" ></Ellipse>
                
                <ProgressBar Name="progress" Minimum="0" Maximum="100" Value="10"  Width="150" Height="30"></ProgressBar>
                <!--<ContentControl Content=""></ContentControl>-->
            </StackPanel>
        </ControlTemplate>
    </Application.Resources>
</Application>
