<Window x:Class="GuruWPF.Controls.TemperatureControlTester"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuruWPF.Controls"
        mc:Ignorable="d"
        Title="TemperatureControlTester" Height="450" Width="800">
    <Grid>
        <local:TemperatureControl x:Name="temp" Value="50" Width="450" Height="30" BorderBrush="Black" BorderThickness="2"></local:TemperatureControl> 
    </Grid>
</Window>
