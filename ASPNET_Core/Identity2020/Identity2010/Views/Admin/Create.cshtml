@model CreateModel
@{
    ViewData["Title"] = "Create";
}

    <div class="m-1 p-1 bg-light" ><h3>Create User</h3></div>
    <form method="post" asp-controller="AdminController" asp-action="Create">
        
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="@Model.Name"></label><br />
                <input asp-for="@Model.Name" /> <!--Remove form-control class so text boxes are small in length-->
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label><br />
                <input asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label><br />
                <input asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
               
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
     
    </form>

