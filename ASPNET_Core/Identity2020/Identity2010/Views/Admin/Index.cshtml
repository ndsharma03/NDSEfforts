@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Index";
}



    <div class="bg-light m-0 p-1 ">
        <h3>List of Users</h3></div>
        @if (Model.Count() > 0)
        {
            <Table class="table table-responsive m-2" >
                <thead>
                    <tr>
                        <th>UserId</th>
                        <th>Name</th>
                        <th>Email</th>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <form asp-action="ConfirmDelete" asp-route-id="@user.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit"
                                   asp-route-id="@user.Id">Edit</a>
                                <button type="submit"  class="btn btn-sm btn-danger"> Delete </button>
                            </form>
                        </td>
                    </tr>
                    }
                </tbody>
            </Table>
        }
        else
        {
            <h5 style="color:red"> There is no user to display!</h5>
        }
<div class="m-0 p-2 bg-light">
    <a class="btn btn-outline-primary" asp-action="Create">Create</a>
</div>