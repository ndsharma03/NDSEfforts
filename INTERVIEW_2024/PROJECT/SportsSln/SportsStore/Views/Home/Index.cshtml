@model IEnumerable<SportsStore.Models.Product>
@{
    <h1>
       
        @ViewBag.Title;
    </h1>
    @foreach(var p in Model)
    {
        <div >
            <p style="border:thick 3px solid red ; background-color:whitesmoke"> Name: @p.Name <br> Price: @p.Price <br>Category: @p.Category</p>
        <div><span>Description :</span>@p.Description</div>
        </div>
    }
}
